<span class="btn btn-addRecords">
    <a
        href="{{url}}"
        class="{{itemClass}}"
        id="{{#if regionName}}{{regionName}}Action--{{/if}}{{id}}"
        {{#each dataAttributes}}
            data-{{name}}="{{value}}"
        {{/each}}
    >
        {{{label}}} 
        (<span class="record-add-control-display">{{recCount}}</span>)
    </a>
    <svg viewBox="0 0 16 16" class="icon record-add-control">
        <use xlink:href="#icon-chevron-down"></use>
    </svg>
</span>
<div class="record-add-control-input">
    <input type="range" class="record-add-input" min="1" max="20" step="1" value="{{recCount}}">
</div>
