<a
    href="{{url}}"
    class="btn btn-{{actionType}} {{actionClass}}"
    data-action-type="{{actionType}}"
    title="{{label}}"
    {{#each dataAttributes}}
        data-{{name}}="{{value}}"
    {{/each}}
>
<svg viewBox="0 0 32 32" class="icon">
    <use xlink:href="#icon-{{actionType}}"></use>
</svg>
<span>
    {{{label}}}
</span>
</a>