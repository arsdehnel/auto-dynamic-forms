<select
    class="{{fieldClass}} adf-form-input"
    name="{{name}}" {{dataAttributeBoolean dataAttributes 'multiple' 'multiple'}}
        {{#each dataAttributes}}
            {{dataAttributeWrite name value 'input'}}
        {{/each}}
    >
    {{#unless required}}
      <option></option>
    {{/unless}}
    {{#each data}}
		<option value="{{this.value}}" {{#if tooltip}} data-tooltip="{{tooltip}}" {{/if}} {{optionSelected selectedBln this.value ../currentValue}}>{{#if this.label}}{{this.label}}{{else}}{{this.value}}{{/if}}</option>
    {{/each}}
</select>